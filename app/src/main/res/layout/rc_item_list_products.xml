<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_edittext_amount"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <TextView
        android:id="@+id/tv_name_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text = "Арматура d8"
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintEnd_toStartOf="@id/tv_amount_product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_amount_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="100"
        android:padding="5dp"
        android:gravity="end"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/tv_name_product"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_product"
        app:layout_constraintEnd_toStartOf="@id/tv_type_product"
        app:layout_constraintStart_toEndOf="@id/tv_name_product"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_type_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        tools:text="KG"
        android:layout_marginEnd="16sp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/tv_amount_product"
        app:layout_constraintStart_toEndOf="@id/tv_amount_product"
        app:layout_constraintBottom_toBottomOf="@id/tv_amount_product"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>